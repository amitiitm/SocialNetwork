<html>
  <head>
    <title>Technotronics Solutions</title>
    <meta http-equiv="content-type" content="text/html; charset=utf-8" />
    <meta name="description" content="" />
    <meta name="keywords" content="" />
    <!--5grid--><script src="/assets/5grid/viewport.js"></script><!--[if lt IE 9]><script src="css/5grid/ie.js"></script><![endif]--><link rel="stylesheet" href="/assets/5grid/responsive.css" /><!--/5grid-->
    <link rel="stylesheet" href="/assets/style.css" />
    <!--[if lte IE 9]><link rel="stylesheet" href="css/style-ie9.css" /><![endif]-->
  </head>
  <body class="subpage">

    <!-- Menu -->
    <%=render 'menu'%>


    <!-- Content -->
    <div id="content-wrapper">
      <div id="content">
        <div class="5grid">
          <div class="3u-first">

            <!-- Sidebar -->
            <section>
              <header>
                <h2>Existing Blogs</h2>
              </header>
              <%blogs = Blog.find(:all)%>
              <ul class="link-list">
                <%blogs.each{|blog|%>
                <li><%= link_to blog.blog_name,:controller => "main", :action => "show_blog" , :id => blog.id%></li>
                <%}%>
              </ul>
            </section>
            <%=render 'left_bottom_sidebar'%>

          </div>
          <div class="9u">

            <!-- Main Content -->
            <section>
              <header>
                <h2>Enter Your Blog Here.</h2>
              </header>
              <%if @blog and @blog.id != ''%>
                <h2 style="font-family:arial;color:green;font-size:20px;">Your Blog is Created Successfully. You Will be notified within 24 Hours when it is approved by Administrator.</h2>
                <h4><a href="my_blog">Create Another Blog</a></h4>
              <%else%>
                <table>
                  <td>
                    <%= form_for :blog, :url => url_for(:controller => 'main', :action => 'create_blog') do |f| %>
                    <tr>Blog name: <%= f.text_field :blog_name %><br /></tr>
                    <tr>Blog Description : <%= f.text_area :blog_description %><br /></tr>
                    Author Name : <%= f.text_field :author_name %><br />
                    Author Email : <%= f.text_field :author_email %><br />
                    Author Homepage : <%= f.text_field :author_homepage_url %><br />
                    <%= f.submit %>
    <%#*<p>%>
    <%#*<input type="submit" alt="Submit button" value="Submit">%>
    <%#*</p>%>
                  <% end %>
                  </td>
                </table>
              <%end%>
            </section>

          </div>
        </div>
      </div>
    </div>

    <!-- Footer -->
    <%= render 'footer' %>

    <!-- Copyright -->
    <%= render 'copyright' %>

  </body>
</html>