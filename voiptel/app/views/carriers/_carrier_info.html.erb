<% form_for @carrier, :html => {:class => "forms"} do |f| %>
	<ul>
		<li>
			<label>Name:</label>
			<%= f.text_field :name, :size => 15 %>
		</li>
		<li>
			<label>Carrier Identifier:</label>
			<%= f.text_field :short_name, :size => 15 %>
		</li>
		<button type="submit">Save</button>
	</ul>
<% end -%>