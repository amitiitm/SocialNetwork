<% form_for distributor, :html => {:class => "forms"} do |f|%>
	<ui>
		<li>
			<div class="left">
				<label>First Name</label>
				<%= f.text_field :first_name, :size => 10 %>				
			</div>
			<div class="left">
				<label>Last Name</label>
				<%= f.text_field :last_name, :size => 10 %>								
			</div>
			<div class="left">
				<label>Business Name</label>
				<%= f.text_field :business_name, :size => 10 %>								
			</div>
		</li>
		<li>
			<label>Address 1</label>
			<%= f.text_field :address1 %>
		</li>
		<li>
			<label>Address 2</label>
			<%= f.text_field :address2 %>
		</li>
		<li>
			<div class="left">
				<label>City</label>
				<%= f.text_field :city, :size => 10 %>				
			</div>
			<div class="left">
				<label>Zip</label>
				<%= f.text_field :zip, :size => 10 %>
			</div>
		</li>
		<li>
			<label>Phones</label>
			<%= f.text_area :phones, :cols => 10, :rows => 5 %>
		</li>
	</ui>
<% end -%>