	 width="100%"
	 height="100%"
	 label="Query"
	 title="Query Builder"
	 backgroundAlpha="0.9"
	 barColor="#E2E2E2"
	 verticalAlign="top" 
	 horizontalAlign="left"
	 verticalGap="1" showCloseButton="true"
	 creationPolicy="all"
	 creationComplete="handleCreationComplete()"
	 close="closeClickHandler(event)"
	 initialize="{this.parentApplication.focusManager.deactivate()}">
	
	<mx:Metadata>
		[Event(name="okClickEvent", type="com.generic.events.FetchCriteriaEvent")]
	</mx:Metadata>
		 
	<mx:Script source="../scripts/FetchCriteriaScript.as"/>
</mx:TitleWindow>
