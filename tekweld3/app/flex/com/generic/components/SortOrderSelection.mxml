<?xml version="1.0" encoding="utf-8"?>
<mx:VBox	xmlns:mx="http://www.adobe.com/2006/mxml" 
			width="100%" height="100%" minWidth="60" 
			paddingTop="10" paddingLeft="0" paddingRight="0" paddingBottom="0"
			verticalAlign="top"	borderStyle="none"	
			backgroundColor="#dee3ef" backgroundAlpha="1.0" borderColor="#404040"
			horizontalScrollPolicy="auto" xmlns:customcomponents="com.generic.customcomponents.*" >
			
 	<mx:Script source="../scripts/SortOrderSelectionScript.as"/>

	<mx:HBox>
		<mx:Spacer width="0"/>
		<mx:Label text="Sort # 1"/>
		<mx:ComboBox id="cbLevel1" width="107" cornerRadius="0" 
			dataProvider="{_sortField}" 
			labelField="label" 
			change="sortOrderChangeEventHandler(event)"/>
	</mx:HBox>

	<mx:HBox>
		<mx:Spacer width="10"/>
		<mx:Label text="Sort # 2"/>
		<mx:ComboBox id="cbLevel2" width="107" cornerRadius="0" 
			dataProvider="{_sortField}" 
			labelField="label" 
			change="sortOrderChangeEventHandler(event)"/>
	</mx:HBox>

	<mx:HBox>
		<mx:Spacer width="20"/>
		<mx:Label text="Sort # 3"/>
		<mx:ComboBox id="cbLevel3" width="107" cornerRadius="0" 
			dataProvider="{_sortField}" 
			labelField="label" 
			change="sortOrderChangeEventHandler(event)"/>
	</mx:HBox>
</mx:VBox>
