<?xml version="1.0" encoding="utf-8"?>
<mx:HBox xmlns:mx="http://www.adobe.com/2006/mxml" 
		 xmlns:customcomponents="com.generic.customcomponents.*" 
		 width="100%" 
		 height="20"
		 horizontalAlign="left" 
		 horizontalGap="0" 
		 verticalGap="0"
		 >
	<mx:Metadata>
		 [Event(name="addRowEvent", type="com.generic.events.ButtonControlEvent")]
		 [Event(name="saveRowEvent", type="com.generic.events.ButtonControlEvent")]
	  	 [Event(name="firstRowEvent", type="com.generic.events.ButtonControlEvent")]
	  	 [Event(name="nextRowEvent", type="com.generic.events.ButtonControlEvent")]
	  	 [Event(name="previousRowEvent", type="com.generic.events.ButtonControlEvent")]
	  	 [Event(name="lastRowEvent", type="com.generic.events.ButtonControlEvent")]
	</mx:Metadata>
	 
 	<mx:Script source="../scripts/ButtonControlPanelPopUpScript.as"/>

	<customcomponents:GenButton	id="btnAdd" 
		icon="@Embed('../assets/add.png')" 
		height="20" 
		width="20" 
		toolTip="Add"
		cornerRadius="0"
		click="btnAddClickHandler()"
	/>
	
	<customcomponents:GenButton	id="btnSave" 
		icon="@Embed('../assets/save.png')" 
		height="20" 
		width="20" 
		toolTip="Save"
		cornerRadius="0"
		click="btnSaveClickHandler()"			
	/>
	
	<mx:Spacer width="10"/>
	
	<customcomponents:GenButton	id="btnFirst" 
				icon="@Embed('../assets/first.png')" 
				height="20" 
				width="20" 
				toolTip="First"
				cornerRadius="0"
				click="btnFirstClickHandler()"
	/>

	<customcomponents:GenButton	id="btnPrevious" 
				icon="@Embed('../assets/prevoius.png')" 
				height="20" 
				width="20" 
				toolTip="Previous"
				cornerRadius="0"
				click="btnPreviousClickHandler()"
	/>

	<customcomponents:GenButton	id="btnNext" 
		icon="@Embed('../assets/next.png')" 
		height="20" 
		width="20" 
		toolTip="Next"
		cornerRadius="0"
		click="btnNextClickHandler()"
	/>
	
	<customcomponents:GenButton	id="btnLast" 
				icon="@Embed('../assets/last.png')" 
				height="20" 
				width="20" 
				toolTip="Last"
				cornerRadius="0"
				click="btnLastClickHandler()"
	/>
</mx:HBox>
