<?xml version="1.0" encoding="utf-8"?>
<gencomponents:AddEdit xmlns:mx="http://www.adobe.com/2006/mxml"
	xmlns:customcomponents="com.generic.customcomponents.*"
	xmlns:gencomponents="com.generic.components.*"
	height="100%" width="100%" verticalGap="0"
	creationPolicy="all">
	
	<mx:Script source="../scripts/AddressAddEditScript.as"/>

	<mx:VBox width="100%" height="100%" verticalGap="3">
		<mx:HBox width="100%">
			<mx:Label text="Address For #" textAlign="right" width="130" visible="true" height="20"/>
			<customcomponents:GenComboBox id="cbAddress_for_id" defaultValue="A" width="184" cornerRadius="0" xmlTag="address_for_flag" updatableFlag="true"
				tableName="crm_address"  tabIndex="1" height="20" labelField="label" 
				dataProvider="{__genModel.masterData.child('crm').address_for_flag}" />
		</mx:HBox>
		<mx:HBox width="100%">
			<mx:Label text="Address Name" textAlign="right" width="130" height="20"/>
			<customcomponents:GenTextInput id="tiAddress_Name" width="184" height="20" visible="true" editable="true"
				tabIndex="2" xmlTag="address_name" updatableFlag="true" tableName="crm_address" maxChars="50"/>
		</mx:HBox>
		<mx:HBox width="100%">
			<mx:Label text="Contact" textAlign="right" width="130" height="20"/>
			<customcomponents:GenTextInput id="tiAddress_contact" width="184"  height="20" visible="true" editable="true"
				tabIndex="3" xmlTag="address_contact" updatableFlag="true" tableName="crm_address" maxChars="50"/>
						</mx:HBox>
		<mx:HBox width="100%">
			<mx:Label text="Address" textAlign="right" width="130" height="20"/>
			<customcomponents:GenTextInput id="tiAddress_1" width="403" height="20" visible="true" editable="true"
				tabIndex="4" xmlTag="address1" updatableFlag="true" tableName="crm_address" maxChars="50"/>
		</mx:HBox>
		<mx:HBox width="100%">
			<mx:Label textAlign="right" width="130" height="20"/>
			<customcomponents:GenTextInput id="tiAddress_2" width="403" visible="true" editable="true"
				tabIndex="5" xmlTag="address2" updatableFlag="true" height="20" tableName="crm_address" maxChars="50"/>
		</mx:HBox>
		<mx:HBox width="100%">
			<mx:Label text="City/State/Zip" textAlign="right" width="130" height="20"/>
			<customcomponents:GenTextInput id="tiCity" width="133" visible="true" editable="true" height="20"
				tabIndex="6" xmlTag="city" updatableFlag="true" tableName="crm_address" maxChars="25"/>
			<customcomponents:GenTextInput id="tiState" width="133" visible="true" editable="true"
				tabIndex="7" height="20" xmlTag="state" updatableFlag="true" tableName="crm_address" maxChars="25"/>
			<customcomponents:GenTextInput id="tiZip" width="121" visible="true" editable="true"
				tabIndex="8" xmlTag="zip" updatableFlag="true" height="20" tableName="crm_address" maxChars="15"/>
		
		</mx:HBox>
		<mx:HBox width="100%">
			<mx:Label text="Country" textAlign="right" width="130" height="20"/>
			<customcomponents:GenTextInput id="tiCountry" width="133" visible="true" editable="true"
				tabIndex="9" xmlTag="country" updatableFlag="true" height="20" tableName="crm_address" maxChars="20"/>
		</mx:HBox>
		<mx:HBox width="100%">
			<mx:Label text="Phone/Fax" textAlign="right" width="130" height="20"/>
			<customcomponents:GenTextInput id="tiPhone" width="133" visible="true" editable="true" height="20"
				tabIndex="10" xmlTag="phone" updatableFlag="true" tableName="crm_address" maxChars="50"/>
			<customcomponents:GenTextInput id="tiFax_no" width="133" visible="true" editable="true"
				tabIndex="11" xmlTag="fax" updatableFlag="true" tableName="crm_address" maxChars="50" height="20"/>
		</mx:HBox>
		<mx:HBox width="100%">
			<mx:Label text="Email" textAlign="right" width="130" height="20"/>
			<customcomponents:GenTextInput id="tiEmail" width="403" visible="true" editable="true"
				tabIndex="12" xmlTag="email" updatableFlag="true" tableName="crm_address" maxChars="50" height="20"/>
		</mx:HBox>
	</mx:VBox>
</gencomponents:AddEdit>

