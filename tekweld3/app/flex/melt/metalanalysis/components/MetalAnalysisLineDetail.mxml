<?xml version="1.0" encoding="utf-8"?>
<gencomponents:DetailAddEdit xmlns:mx="http://www.adobe.com/2006/mxml"
	width="550" height="270" verticalGap="0"
	xmlns:customcomponents="com.generic.customcomponents.*"
	xmlns:gencomponents="com.generic.components.*"
	>
	
	<mx:Script source="../scripts/MetalAnalysisLineDetailScript.as"/>
	
	<mx:VBox height="100%" width="100%">
		<mx:HBox>
			<mx:Label text="Gold Wt" width="95" textAlign="right"/>
			<customcomponents:GenTextInput id="tiGold_wt" width="90" height="20" maxChars="25" validationFlag="true"
				tabIndex="1" toolTip="Gold Wt" xmlTag="gold_weight" updatableFlag="true" tableName="melting_transaction_line"
				 textAlign="right" dataType="N" maxValue="99999.99999" defaultValue="0.00000" setDefaultOnEmpty="true"/>
		</mx:HBox>
		<mx:HBox>
			<mx:Label text="Total Pcs" width="95" textAlign="right"/>
			<customcomponents:GenTextInput id="tiTotal_qty" width="90" height="20" maxChars="25" validationFlag="true"
				tabIndex="2" toolTip="Total Qty" xmlTag="total_pcs" updatableFlag="true" tableName="melting_transaction_line"
				textAlign="right" dataType="N" maxValue="99999" defaultValue="0" setDefaultOnEmpty="true"/>
		</mx:HBox>
		<mx:HBox>
			<mx:Label text="Gold %" width="95" textAlign="right"/>
			<customcomponents:GenTextInput id="tiGold_per" width="90" height="20" maxChars="25" validationFlag="true"
				tabIndex="3" toolTip="Gold %" xmlTag="gold_per" updatableFlag="true" tableName="melting_transaction_line"
				textAlign="right" dataType="N" maxValue="999.99" defaultValue="0.00" setDefaultOnEmpty="true"/>
		</mx:HBox>
		<mx:HBox>
			<mx:Label text="Description" width="95" textAlign="right"/>
			<customcomponents:GenTextInput id="tiDescription" width="379" height="20"
				xmlTag="description" updatableFlag="true" tabIndex="4" maxChars="100"
				tableName="melting_transaction_line" />
		</mx:HBox>
		
		<customcomponents:GenTextInput id="tiSerial_no" toolTip="Serial #" restrict="1234567890" visible="false" width="0" height="0"
			validationFlag="false" xmlTag="serial_no" updatableFlag="false" tableName="melting_transaction_line"/>
	</mx:VBox>
</gencomponents:DetailAddEdit>

